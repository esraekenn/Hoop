<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"

        android:layout_weight="1"
        android:layout_height="wrap_content"
        tools:background="@color/colorWhite"
        android:id="@+id/linearLayout2">


    <ImageView
            android:layout_width="53dp"
            android:layout_height="49dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imgProfile"
            app:layout_constraintTop_toBottomOf="@+id/txtUserName"
            app:layout_constraintEnd_toStartOf="@+id/imgCallSymbol"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp" app:layout_constraintBottom_toBottomOf="@+id/txtUserName"
            android:layout_marginEnd="309dp" android:layout_marginRight="309dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtUserName"
            android:textSize="18sp"
            android:fontFamily="@font/helvetica_bold"
            android:layout_marginTop="7dp" app:layout_constraintStart_toEndOf="@+id/imgProfile"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/txtDate" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="285dp" android:layout_marginRight="285dp" android:textStyle="bold"
            app:layout_constraintVertical_bias="0.04000002"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imgCallPhoto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgProfile"
            app:layout_constraintEnd_toStartOf="@+id/txtDate"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDate"

            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/txtUserName"
            app:layout_constraintStart_toEndOf="@+id/imgCallPhoto" app:layout_constraintEnd_toStartOf="@+id/txtHour"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtHour"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtDate"
            app:layout_constraintStart_toEndOf="@+id/txtDate" android:layout_marginEnd="185dp"
            android:layout_marginRight="185dp" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imgCallSymbol"
            android:layout_marginTop="16dp" app:layout_constraintStart_toEndOf="@+id/imgProfile"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="21dp" android:layout_marginRight="21dp"/>

    <View android:layout_width="350dp"
          android:background="?android:attr/listDivider"
          android:layout_height="1dp"
          tools:layout_editor_absoluteX="61dp" app:layout_constraintTop_toBottomOf="@+id/imgCallPhoto"/>
</androidx.constraintlayout.widget.ConstraintLayout>