<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="8dp"
        tools:background="@color/colorWhite">


    <ImageView
            android:layout_width="42dp"
            android:layout_height="56dp" android:background="@drawable/hoop_user_icon_g"
            android:id="@+id/imgProfile"
            android:minWidth="50dp"
            android:minHeight="50dp"
            app:layout_constraintTop_toBottomOf="@+id/txtUserName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/txtUserName"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtUserName"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/txtUserMessage"
            app:layout_constraintBottom_toTopOf="@+id/txtUserMessage" android:layout_marginBottom="4dp"
            app:fontFamily="@font/helvetica_bold" android:textStyle="normal"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtUserMessage"
            android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgProfile" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"  android:textSize="14sp"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDate"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/imgProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="1.0"

            android:textAllCaps="false"/>
    <View
            android:id="@+id/divider"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txtUserMessage"
            app:layout_constraintEnd_toEndOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
